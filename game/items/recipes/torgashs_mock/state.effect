				volume="0.4"
				sample="/shared/sounds/items/item_damage10.wav"
			/>

			<simpleemitter
				bone="_bone_centerofchest"
				spawnrate="12"
				minparticlelife="1000"
				maxparticlelife="2000"

				offsetsphere="5"
				depthbias="-20"
				material="/shared/effects/materials/flare2.material"
			>
				<particle
					minangle="-360"
					maxangle="360"
					minanglespeed="-60"
					maxanglespeed="60"
					turn="1"
					startcolor="1 1 1"
					midcolorpos="0.2"
