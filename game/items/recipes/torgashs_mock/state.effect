					midsize="12"
					endsize="6"
					startalpha="0"
					midalpha=".7"
					endalpha="0"
					midalphapos=".5"
					startstickiness=".3"
					endstickiness="0"
					turn="true"
				/>
			</simpleemitter>

			<billboard
				bone="_bone_centerofchest"
				startcolor=".4 .2 0"
				endcolor="0"
				size="175"
				depthbias="-120"
				expirelife="500"
				material="/shared/effects/materials/whitedot.material"
			/>

